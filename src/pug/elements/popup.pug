.popup__layer#popup__layer

//begin popup
.popup.popup-share#popup-share
  .popup__close
    +svg('close')
  .popup-share__body
    h3.popup-share__title Share

    //begin popup-share__social-list
    ul.popup-share__social-list
      li.popup-share__social-item
        a(href="#").popup-share__social-link
          +svg('share-fb')
      li.popup-share__social-item
        a(href="#").popup-share__social-link
          +svg('share-tw')
      li.popup-share__social-item
        a(href="#").popup-share__social-link
          +svg('share-ln')
      li.popup-share__social-item
        a(href="#").popup-share__social-link
          +svg('share-vk')
    //end popup-share__social-list

    .popup-share__link
      .popup-share__link-icon
        +svg('link')
      .popup-share__link-text
        span https://monosnap.com/direct/BlJ18HxT

//end popup